<%= link_to 'New article', new_article_path, :class => 'btn btn-xs btn-primary' %>
<h1>Listing articles</h1>
<% @articles.each do |article| %>
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><%= article.title %> - <%= article.created_at.strftime('%Y-%m-%d %H:%M:%S') %> </h3>
      </div>
      <div class="panel-body">
        <%= article.text %>
      </div>
      <p>
      <div class="container">
          <ul class="nav nav-pills">

            <li><%= link_to 'Show', article_path(article),:class => 'btn btn-xs btn-primary' %> </li>
            <li><%= link_to 'Edit', edit_article_path(article),:class => 'btn btn-xs btn-primary' %> </li>
            <li> <%= link_to 'Delete', article_path(article), method: :delete,
                          data: { confirm: 'Are you sure?'},:class => 'btn btn-xs btn-danger' %> </li>
           </ul>
      </div>
      </p>
    </div>

<% end %>